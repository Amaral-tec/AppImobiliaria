                var myXhr = $.ajaxSettings.xhr();
                if (myXhr.upload) { // Evaluates whether upload property support
                    myXhr.upload.addEventListener('progress', function () {
                    }, false);
                }
                return myXhr;
            }
        });
    });
</script>


